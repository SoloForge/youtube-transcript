{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2022"],
    "module": "Node16",
    "moduleResolution": "Node16",
    // "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "test"]
}
